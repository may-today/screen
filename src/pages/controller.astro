---
import Layout from '@/layouts/Layout.astro'
import DataLayer from '@/components/common/DataLayer'
import ControllerPeerLayer from '@/components/controller/ControllerPeerLayer'
import SongListSidebar from '@/components/controller/SongListSidebar'
import CurrentPlayingBar from '@/components/controller/CurrentPlayingBar'
import BottomControlBar from '@/components/controller/BottomControlBar'
import LyricListView from '@/components/common/LyricListView'
import StatusView from '@/components/common/StatusView'
import Logo from '@/components/common/Logo'
import GlobalToaster from '@/components/common/GlobalToaster'
---

<Layout title="遥控器">
  <DataLayer client:only />
  <ControllerPeerLayer client:only />
	<main class="flex-1 flex flex-col w-screen overflow-hidden">
    <SongListSidebar client:only />
    <div class="flex-1 flex flex-col items-stretch overflow-hidden">
      <LyricListView client:load />
    </div>
    <CurrentPlayingBar client:only />
    <BottomControlBar client:only />
    <div class="flex items-center justify-between flex-shrink-0 h-10 px-4 border-t border-base">
      <StatusView client:load />
      <Logo client:only />
    </div>
  </main>
  <GlobalToaster client:only />
</Layout>
